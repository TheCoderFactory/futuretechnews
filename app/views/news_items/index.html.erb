<p id="notice"><%= notice %></p>

<h1>Listing News Items</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Favicon</th>
      <th>Description</th>
      <th>Main image</th>
      <th>Url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @news_items.each do |news_item| %>
      <tr>
        <td><%= news_item.title %></td>
        <td><%= news_item.favicon %></td>
        <td><%= news_item.description %></td>
        <td><%= news_item.main_image %></td>
        <td><%= news_item.url %></td>
        <td><%= link_to 'Show', news_item %></td>
        <td><%= link_to 'Edit', edit_news_item_path(news_item) %></td>
        <td><%= link_to 'Destroy', news_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New News item', new_news_item_path %>
